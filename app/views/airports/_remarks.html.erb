<% show_limit = 5 %>

Remarks

<% if @airport.remarks.any? %>
  <ul>
    <% @airport.remarks.limit(show_limit).each do |remark| %>
      <li><%= remark.text %></li>
    <% end %>
  </ul>

  <% if @airport.remarks.count > show_limit %>
    <a href="#" data-toggle="collapse" data-target="remaining-remarks">Show More</a>

    <div id="remaining-remarks" class="collapsible">
      <ul>
        <% @airport.remarks.offset(show_limit).each do |remark| %>
          <li><%= remark.text %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
<% end %>
