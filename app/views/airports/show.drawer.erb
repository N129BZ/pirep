<div class="row no-gutters">
  <div class="col-10">
    <h3><%= @airport.code %> - <%= @airport.name.titleize %></h3>
  </div>

  <div class="col-2">
    <button type="button" class="btn btn-primary btn-sm float-right">More &gt;</button>
  </div>
</div>

<div class="row">
  <div class="coordinates col border-bottom">
    <%= @airport.latitude %>, <%= @airport.longitude %>
    <button type="button" class="btn btn-secondary btn-sm float-right zoom-btn" data-latitude="<%= @airport.latitude %>" data-longitude="<%= @airport.longitude %>">Zoom In</button>
  </div>
</div>

<div class="row mt-3">
  <div class="photo col">
    <%= render partial: 'airports/photo_gallery', formats: :html, locals: {photos: @photos} %>
  </div>
</div>

<div class="row mt-3">
  <div class="stats col">
    <ul class="list-unstyled">
      <li><i class="fas fa-mountain"></i> Elevation: <%= @airport.elevation.to_s(:delimited) %>ft</li>
      <li><i class="fas fa-unlock"></i> Public: <%= @airport.ownership_type %></li>
    </ul>
  </div>
</div>

<div class="row">
  <div class="runways col">
    Runways:

    <ul>
      <% @airport.runways.each do |runway| %>
        <li><%= runway.number %>: <%= runway.length.to_s(:delimited) %>ft</li>
      <% end %>
    </ul>
  </div>
</div>

<div class="row">
  <div class="tags col">
    <% @airport.tags.each do |tag| %>
      <%= tag.name %>
    <% end %>
  </div>
</div>

<div class="row">
  <div class="description col">
    Description&hellip;
  </div>
</div>
