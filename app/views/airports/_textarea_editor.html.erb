<div class="card my-2">
  <div class="card-header">
    <div class="d-flex justify-content-between align-items-center">
      <%= title %>
      <i class="fas fa-edit editor-edit-icon"></i>
    </div>
  </div>

  <div>
  <%= text_area_tag nil, model.send(column), data: {editor: true, height: textarea_editor_height(defined?(height) ? height : :large)}.compact %>

  <%= form_with model: model do |form| %>
    <%= form.hidden_field column, {'data-column-field': true} %>
  <% end %>
  </div>
</div>
